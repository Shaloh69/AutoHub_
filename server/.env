# Application Settings
APP_NAME=Car Marketplace Philippines
DEBUG=True
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/car_marketplace_ph
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=False

# Security & Authentication
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
JWT_SECRET_KEY=change-this-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
MAX_IMAGES_PER_LISTING=20
USE_S3=False

# AWS S3 (if USE_S3=True)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=car-marketplace-ph
AWS_REGION=ap-southeast-1

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@carmarketplace.ph
SMTP_FROM_NAME=Car Marketplace Philippines

# Payment - Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Payment - GCash
GCASH_API_KEY=your-gcash-api-key
GCASH_API_SECRET=your-gcash-api-secret
GCASH_API_URL=https://api.gcash.com

# Payment - PayMaya
PAYMAYA_PUBLIC_KEY=your-paymaya-public-key
PAYMAYA_SECRET_KEY=your-paymaya-secret-key
PAYMAYA_API_URL=https://pg.paymaya.com

# Subscription Settings
FREE_TRIAL_DAYS=7
SUBSCRIPTION_GRACE_PERIOD_DAYS=3
SUBSCRIPTION_REMINDER_DAYS=7,3,1

# Listing Settings
LISTING_EXPIRY_DAYS=60
MAX_FREE_LISTINGS_PER_MONTH=3
BOOST_LISTING_DURATION_HOURS=168
FEATURED_LISTING_DURATION_HOURS=720

# Location Settings
DEFAULT_SEARCH_RADIUS_KM=25
MAX_SEARCH_RADIUS_KM=500
COORDINATE_PRECISION_METERS=100

# Philippines Geographic Bounds
PHILIPPINES_BOUNDS_NORTH=21.0
PHILIPPINES_BOUNDS_SOUTH=4.0
PHILIPPINES_BOUNDS_EAST=127.0
PHILIPPINES_BOUNDS_WEST=116.0

# Car Validation
MAX_CAR_YEAR=2026
MIN_CAR_YEAR=1900
MIN_LISTING_PRICE=50000.0
MAX_LISTING_PRICE=50000000.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Fraud Detection
MAX_FRAUD_SCORE=5.0
AUTO_SUSPEND_FRAUD_SCORE=8.0

# Monitoring (Optional)
LOG_LEVEL=INFO
ENABLE_METRICS=True
SENTRY_DSN=your-sentry-dsn